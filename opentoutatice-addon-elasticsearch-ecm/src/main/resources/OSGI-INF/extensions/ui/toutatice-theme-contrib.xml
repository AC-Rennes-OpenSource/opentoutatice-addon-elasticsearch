<?xml version="1.0"?>
<component name="fr.toutatice.ecm.elasticsearch.theme.contrib">

	<require>fr.toutatice.ecm.platform.web.theme</require>

	<extension target="org.nuxeo.theme.services.ThemeService"
		point="resources">
		<resource name="ottc.es.admin.css">
			<path>css/ottc-es-admin.css</path>
		</resource>
	</extension>

	<extension target="org.nuxeo.theme.services.ThemeService"
		point="views">

		<view name="nuxeo5 includes" template-engine="jsf-facelets" merge="true">
			<format-type>widget</format-type>
			<resource>glyphicons.css</resource>
			<resource>ottc.custom.tinymce.init.js</resource>
			<resource>ottc.simple.tinymce.init.js</resource>
			<resource>ottc.collapsible.css</resource>
			<resource>ottc.collapsible.js</resource>
			<resource>ottc.es.admin.css</resource>
		</view>

	</extension>

</component>