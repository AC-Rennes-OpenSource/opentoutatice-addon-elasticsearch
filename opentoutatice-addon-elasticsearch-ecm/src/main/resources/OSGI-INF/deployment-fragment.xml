<?xml version="1.0"?>

<fragment version="1">
 	
	<require>org.nuxeo.ecm.automation.core</require>
	<require>org.nuxeo.ecm.automation.io</require>
	<require>org.nuxeo.ecm.platform.lang</require>
	
	<extension target="application#MODULE">
		<module>
			<java>${bundle.fileName}</java>
		</module>
	</extension>
	
	<!-- Backport of 8.3 to activate sync ES on given request-->
    <extension target="web#SERVLET">

        <filter>
            <display-name>ElasticSearchFilter</display-name>
            <filter-name>ElasticSearchFilter</filter-name>
            <filter-class>
                fr.toutatice.ecm.elasticsearch.filter.ElasticSearchFilter
            </filter-class>
        </filter>
        
        <filter-mapping>
            <filter-name>ElasticSearchFilter</filter-name>
            <url-pattern>/restAPI/*</url-pattern>
            <url-pattern>/site/automation/*</url-pattern>
            <dispatcher>REQUEST</dispatcher>
            <dispatcher>FORWARD</dispatcher>
        </filter-mapping>
    
    </extension>

	<install>
		<!-- append l10n files -->
		<delete path="${bundle.fileName}.tmp" />
		<mkdir path="${bundle.fileName}.tmp" />
		<unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp">
			<include>OSGI-INF/l10n/**</include>
		</unzip>
		<append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_fr.properties"
            to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
		<append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_en.properties"
			to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
		<delete path="${bundle.fileName}.tmp" />
	</install>

</fragment>
